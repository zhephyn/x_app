<h1>Create your profile by filling in the details below</h1>
<%= form_with model: @profile do |form| %>
    <div>
        <%= form.label :bio %>
        <%= form.text_area :bio %>
    </div>
    <div>
        <%= form.label :website %>
        <%= form.text_field :website %>
    </div>
    <div>
        <%= form.label :location %>
        <%= form.text_field :location %>
    </div>
    <div>
        <%= form.file_field :profile_photo %>
    </div>
    <div>
        <%= form.file_field :cover_photo %>
    </div>
    <div>
        <%= form.submit  "Create Profile" %>
    </div>
<% end %>