
<body class="bg-gray-100">
  <div class="flex">
    <!-- Sidebar -->
    <div class="w-1/5 bg-white h-screen p-4">
      <div class="mb-4">
        <a href="#" class="text-blue-500 text-2xl font-bold">Twitter</a>
      </div>
      <nav>
        <ul>
            <div class="flex items-center">
                <%= image_tag("home-icon.svg", alt: "Home Icon", class: "w-6 h-6 pb-8")%>
                <li class="mb-2"><a href="#" class="text-gray-700 hover:text-blue-500">Home</a></li>
            </div>
            <div class="flex items-center">
                <%= image_tag("explore-icon.svg", alt: "Explore Icon", class: "w-6 h-6 pb-8")%>
                <li class="mb-2"><a href="#" class="text-gray-700 hover:text-blue-500">Explore</a></li>
            </div>
            <div class="flex items-center">
                <%= image_tag("notifications-icon.svg", alt: "Notifications Icon",class: "w-6 h-6 pb-8")%>
                <li class="mb-2"><a href="#" class="text-gray-700 hover:text-blue-500">Notifications</a></li>
            </div>
            <div class="flex items-center">
                <%= image_tag("messages-icon.svg", alt: "Messages Icon",class: "w-6 h-6 pb-8")%>
                <li class="mb-2"><a href="#" class="text-gray-700 hover:text-blue-500">Messages</a></li>
            </div>
            <div class="flex items-center">
                <%= image_tag("bookmarks-icon.svg", alt: "Bookmarks Icon", class: "w-6 h-6 pb-8")%>
                <li class="mb-2"><a href="#" class="text-gray-700 hover:text-blue-500">Bookmarks</a></li>
            </div>
            <div class="flex items-center">
                <%= image_tag("lists-icon.svg", alt: "Lists Icon", class: "w-6 h-6 pb-8")%>
                <li class="mb-2"><a href="#" class="text-gray-700 hover:text-blue-500">Lists</a></li>
            </div>
            <div class="flex items-center">
                <%= image_tag("profile-icon.svg", alt: "Profile Icon", class: "w-6 h-6 pb-8")%>
                <li class="mb-2"><a href="#" class="text-gray-700 hover:text-blue-500">Profile</a></li>
            </div>
            <div class="flex items-center">
                <%= image_tag("more-icon.svg", alt: "More Icon", class: "w-6 h-6 pb-8")%>
                <li><a href="#" class="text-gray-700 hover:text-blue-500">More</a></li>
            </div>
        </ul>
      </nav>
      <%= button_to "Tweet", new_tweet_path, method: :get, class: "mt-4 w-full bg-blue-500 text-white py-2 rounded" %>
    </div>

    <!-- Main Content -->
    <div class="flex-1 p-4">
      <div>
        <div><h2>Home</h2></div>
        <div class="bg-white w-full rounded-lg">
          <%= button_to profile_path(current_user.profile), method: :get do %>
            <%= image_tag(current_user.profile.profile_photo, class: "w-10 h-10 rounded-full cursor-pointer") %>
          <% end %>
          <%= form_with model: @tweet do |form| %>
            <%= form.text_area :body, class: " w-full border-none", rows: "2", placeholder: "What's Happening?" %>
            <%= form.submit "Tweet", class: "bg-blue-500 text-white rounded-lg px-4 py-1 rounded cursor-pointer" %>
          <% end %>
        </div>
        <div>
          <% @tweets.each do |tweet| %>
              <div class="border-t-2 border-b-2">
                <p><b><%= tweet.user.username%></b>@<%= tweet.user.username %></p>
                <% if tweet.user.profile.present? && tweet.user.profile.profile_photo.attached?%>
                  <%= button_to do %>
                    <%= image_tag(tweet.user.profile.profile_photo,class: "w-10 h-10 rounded-full cursor-pointer")%>
                  <% end %>
                <% end %>
                <%= link_to tweet_path(tweet), method: :get do %>
                  <%=tweet.body%>
                <% end %>
                <div class="flex">
                  <div class="flex">
                    <% if current_user.likes.exists?(likeable_id: tweet, likeable_type: tweet.class.name)%>
                      <%= button_to like_path(tweet.likes.find_by(user_id: current_user.id)), method: :delete do %>
                        <button>
                          <svg class="w-5 h-5 rounded-full fill-red-500 cursor-pointer" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
                          </svg>
                        </button>
                      <% end %>
                        <p><%= tweet.likes.count %> Likes</p>
                      <% else %>
                      <%= button_to likes_path(tweet), params: {like: {likeable_id: tweet.id, likeable_type: tweet.class.name}}, method: :post do %>
                        <button>
                          <svg class="w-5 h-5 rounded-full" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
                          </svg>
                        </button>
                      <% end %>
                      <p><%= tweet.likes.count %> Likes </p>
                    <% end %>
                  </div>
                  <div class="flex hover:text-blue-500 cursor-pointer">
                  <%= button_to tweet_path(tweet), method: :get do %>
                    <button>
                      <svg class="w-5 h-5 rounded-full" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M12 20.25c4.97 0 9-3.694 9-8.25s-4.03-8.25-9-8.25S3 7.444 3 12c0 2.104.859 4.023 2.273 5.48.432.447.74 1.04.586 1.641a4.483 4.483 0 0 1-.923 1.785A5.969 5.969 0 0 0 6 21c1.282 0 2.47-.402 3.445-1.087.81.22 1.668.337 2.555.337Z" />
                      </svg>
                    </button>
                  <% end %>
                  <% if tweet.comments.any? %>
                    <p><%= tweet.comments.count%>Comments</p>
                  <% else %>
                    <p>0 Comments</p>
                  <% end %>
                  </div>
                  <div class="flex hover:text-blue-500 cursor-pointer">
                  <%= button_to retweet_tweet_tweet_path(tweet), method: :post do %>
                    <button>
                      <svg class="w-5 h-5 rounded-full"  xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 12c0-1.232-.046-2.453-.138-3.662a4.006 4.006 0 0 0-3.7-3.7 48.678 48.678 0 0 0-7.324 0 4.006 4.006 0 0 0-3.7 3.7c-.017.22-.032.441-.046.662M19.5 12l3-3m-3 3-3-3m-12 3c0 1.232.046 2.453.138 3.662a4.006 4.006 0 0 0 3.7 3.7 48.656 48.656 0 0 0 7.324 0 4.006 4.006 0 0 0 3.7-3.7c.017-.22.032-.441.046-.662M4.5 12l3 3m-3-3-3 3" />
                      </svg>
                    </button>
                  <% end %>
                  <% if tweet.retweets.any? %>
                    <p><%=tweet.retweets.count%>Retweets</p>
                  <% else %>
                    <p>0 Retweets</p>
                  <% end %>
                  </div>
                  <div class="flex hover:text-blue-500 cursor-pointer">
                  <% if current_user.bookmarks.exists?(bookmarkable_id: tweet.id ,bookmarkable_type: "Tweet", user_id: current_user.id)%>
                    <%= button_to bookmark_path(tweet.bookmarks.find_by(user_id: current_user.id)), method: :delete do %>
                      <button>
                        <svg class="w-5 h-5 rounded-full fill-blue-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M17.593 3.322c1.1.128 1.907 1.077 1.907 2.185V21L12 17.25 4.5 21V5.507c0-1.108.806-2.057 1.907-2.185a48.507 48.507 0 0 1 11.186 0Z" />
                        </svg>
                      </button>
                    <% end %>
                    <p><%=tweet.bookmarks.count%> Bookmarks</p>
                  <% else %>
                     <%= button_to bookmarks_path(tweet), params: {bookmark: {bookmarkable_type: tweet.class.name, bookmarkable_id: tweet.id}}, method: :post do %>
                      <button>
                        <svg class="w-5 h-5 rounded-full" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M17.593 3.322c1.1.128 1.907 1.077 1.907 2.185V21L12 17.25 4.5 21V5.507c0-1.108.806-2.057 1.907-2.185a48.507 48.507 0 0 1 11.186 0Z" />
                        </svg>
                      </button>
                    <% end %>
                    <p><%=tweet.bookmarks.count%> Bookmarks</p>
                  <% end %>
                  </div>
                  <div class="flex hover:text-blue-500 cursor-pointer">
                  <%= button_to new_quote_tweet_path(tweet), method: :get do %>
                    <button>
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                      <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                      </svg>
                    </button>
                  <% end %>
                  <p>Quote Tweet</p>
                  </div>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Who To Follow -->
    <div class="w-1/4 p-4">
      <div class="bg-white p-4 rounded-lg shadow-md">
        <h2 class="text-lg font-bold mb-4">Who To follow</h2>
        <ul>
          <li class="mb-4">
            <p class="text-gray-800">@erincodes</p>
          </li>
        </ul>
        <a href="#" class="text-blue-500">Show more</a>
      </div>
    </div>
  </div>
</body>
</html>
